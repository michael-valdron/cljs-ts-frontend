{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "dom",
            "dom.iterable",
            "ES6"
        ],
        "moduleResolution": "node",
        "outDir": "dist/main",
        "module": "commonjs",
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "rootDir": "./src/main/ts",
        "jsx": "react-jsx"
    }
}